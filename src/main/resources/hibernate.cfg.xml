<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
  
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/gerform</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">postgres</property>
  
        <mapping class="gerform.main"/>
        <mapping class="Entidade.Usuario"/>
        <mapping class="Entidade.UsuarioLogado"/>
        <mapping class="Entidade.Material"/>
        <mapping class="Entidade.Fornecedor"/>
        <mapping class="Entidade.PropriedadesMaterial"/>
        
        <mapping class="Tela.IfrFornecedor"/>
        <mapping class="Tela.IfrUsuario"/>
        <mapping class="Tela.IfrMaterial"/>
        <mapping class="Tela.IfrPropriedadesMaterial"/>
        
        <mapping class="Dao.FornecedorDAO"/>
        <mapping class="Dao.UsuarioDAO"/>
        <mapping class="Dao.LoginDAO"/>
        <mapping class="Dao.MaterialDAO"/>
        <mapping class="Dao.PropriedadesMaterialDAO"/>
        <mapping class="Dao.CombosDAOMat"/>
         
    </session-factory>
</hibernate-configuration>